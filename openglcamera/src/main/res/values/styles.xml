<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeWithLogo" parent="AppTheme">
        <item name="android:windowBackground">@drawable/luncher_logo</item>
    </style>

    <style name="Dialog" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="dialogAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <style name="SwitchCompat.Control" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/red_ff52</item>
        <item name="colorSwitchThumbNormal">@color/gray9E</item>
        <item name="android:colorForeground">@color/gray9E</item>
    </style>

    <style name="SwitchCompat.Text" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>

    </style>


<style name="RadioStytle" parent="Widget.AppCompat.CompoundButton.RadioButton">
    <item name="android:button">@null</item>
    <item name="android:gravity">center</item>
    <item name="android:background">@drawable/selector_tab_bg</item>
    <item name="android:textColor">@drawable/selector_radio_text</item>
</style>

    <style name="CircleRadioStytle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_radio_circle</item>
        <item name="android:textColor">@drawable/selector_radio_text</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>



</resources>
